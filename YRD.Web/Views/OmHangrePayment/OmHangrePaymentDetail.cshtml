
@{
    ViewBag.Title = "挂账还款记录--详情";
}
@section css{
    <!--本页.css-->
    <link rel="stylesheet" href="@ConfigHelper.GetCdnUrl/Content/css/iconbg.css" />
    <link rel="stylesheet" href="@ConfigHelper.GetCdnUrl/Content/css/common.css" />
    <link rel="stylesheet" href="@ConfigHelper.GetCdnUrl/Content/css/operation_manage.css" />
}
<div class="page-content">
    <div class="container-fluid">
        <!--面包屑-->
        <div class="row-fluid">
            <div class="span12">
                <ul class="breadcrumb">
                    <li class="backprev">
                        <a href="javascript:history.back();">返回上一级</a>
                    </li>
                    <li>
                        <b class="iconbg txt"></b>
                        <a>经营管理</a>
                        <b class="iconbg angle-right-solid"></b>
                    </li>
                    <li>
                        <a href="/OmHangrePayment/OmHangrePaymentRecord">挂账还款记录</a>
                        <b class="iconbg angle-right-solid"></b>
                    </li>
                    <li>
                        <a>详情</a>
                    </li>
                </ul>
            </div>
        </div>
        <!--内容区域-->
        <div class="row-fluid " id="om_hang_detail">
            <!-- 进度条-->
            <div class="row-fluid progressBox">
                <div class="span6 progressItem active">
                    <!--  -->
                    <div class="barBox">
                        <b class="bbBg"></b>
                        <b class="bbIcon bbIconGz"></b>
                        <b class="bbLine"></b>
                    </div>
                    <div class="textBox leftPadding">挂账</div>
                    <div class="detailBox">
                        <div class="row-fluid">
                            <div class="span3">订单号</div>
                            <div class="span9">@ViewBag.ID</div>
                        </div>
                        <div class="row-fluid">
                            <div class="span3">结账时间</div>
                            <div class="span9">@ViewBag.CreateTime</div>
                        </div>
                        <div class="row-fluid">
                            <div class="span3">结账金额</div>
                            <div class="span9"><span>@ViewBag.Payable</span>元</div>
                        </div>
                        <div class="row-fluid">
                            <div class="span3">挂账金额</div>
                            <div class="span9"><span>@ViewBag.Bill</span>元</div>
                        </div>
                        <div class="row-fluid">
                            <div class="span3">挂账人</div>
                            <div class="span9">@ViewBag.DebtName</div>
                        </div>
                        <div class="row-fluid">
                            <div class="span3">手机号</div>
                            <div class="span9">@ViewBag.DebtPhone</div>
                        </div>
                        <div class="row-fluid">
                            <div class="span3">备注</div>
                            <div class="span9">别的别的要求别的要求的要求别的要求别求的要求别的要求别的要求</div>
                        </div>
                    </div>
                </div>
                <div class="span6 progressItem ">
                    <!-- active -->
                    <div class="barBox">
                        <b class="bbBg"></b>
                        <b class="bbIcon bbIconHk"></b>
                    </div>
                    <div class="textBox leftPadding">还款</div>
                    <div class="detailBox">
                        <div class="row-fluid">
                            <div class="span3">订单号</div>
                            <div class="span9">@ViewBag.ID</div>
                        </div>
                        <div class="row-fluid">
                            <div class="span3">结账时间</div>
                            <div class="span9">@ViewBag.CreateTime</div>
                        </div>
                        <div class="row-fluid">
                            <div class="span3">结账金额</div>
                            <div class="span9"><span>@ViewBag.Payable</span>元</div>
                        </div>
                        <div class="row-fluid">
                            <div class="span3">挂账金额</div>
                            <div class="span9"><span>@ViewBag.Bill</span>元</div>
                        </div>
                        <div class="row-fluid">
                            <div class="span3">挂账人</div>
                            <div class="span9">@ViewBag.DebtName</div>
                        </div>
                        <div class="row-fluid">
                            <div class="span3">手机号</div>
                            <div class="span9">@ViewBag.DebtPhone</div>
                        </div>
                        <div class="row-fluid">
                            <div class="span3">还款时间</div>
                            <div class="span9">@ViewBag.hkCreateTime</div>
                        </div>
                        <div class="row-fluid">
                            <div class="span3">还款金额</div>
                            <div class="span9"><span>@ViewBag.hkMoney</span>元</div>
                        </div>
                        <div class="row-fluid">
                            <div class="span3">备注</div>
                            <div class="span9">别的别的要求别的要求的要求别的要求别的要求</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section script{
    <script src="@ConfigHelper.GetCdnUrl/Content/js/common.js"></script>
    <script src="@ConfigHelper.GetCdnUrl/Content/js/operation-manage.js"></script> 
}