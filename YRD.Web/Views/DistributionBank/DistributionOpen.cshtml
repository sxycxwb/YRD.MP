@model YRD.Model.ViewModels.ViewDistributionOpen
@{
    ViewBag.menuid = 1119;
    ViewBag.Title = "分销开启";
}
@section css{
    <link rel="stylesheet" href="@ConfigHelper.GetCdnUrl/Content/css/account-manage.css" />
}
<!--右侧内容-->
<div class="page-content">
    <div class="container-fluid">
        <!--面包屑-->
        <div class="row-fluid">
            <div class="span12">
                <ul class="breadcrumb">
                    <li>
                        <b class="iconbg account-manage"></b>
                        <a href="/AccountInfo/AccountCenter">账户管理</a>
                        <b class="iconbg angle-right-solid"></b>
                    </li>
                    <li>
                        <a href="/DistributionBank/DistributionBalance">三级分销</a>
                        <b class="iconbg angle-right-solid"></b>
                    </li>
                    <li>
                        <a href="/DistributionBank/DistributionOpen">分销开启</a>
                    </li>
                </ul>
            </div>
        </div>
        <!--内容区域-->
        <div class="row-fluid ">
            <div class="portlet box tabbable">
                <div class="portlet-body">
                    <div class="tabbable portlet-tabs">
                        <ul class="nav nav-tabs">
                            <li><a href="/DistributionBank/DistributionBalance">分销账户</a></li>
                            <li><a href="/DistributionBank/JinbiDetail">账户明细</a></li>
                            <li><a href="/DistributionBank/DistributionOrder">分销订单</a></li>
                            <li><a href="/DistributionBank/DistributionContract">签署合同</a></li>
                            <li><a href="/DistributionBank/DistributionPercentage">返利设置</a></li>
                            <li class="active"><a href="#td_open" data-toggle="tab">分销开启</a></li>
                        </ul>
                        <div class="tab-content">
                            <!--分销开启-->
                            <div class="active tab-pane" id="td_open">
                                <div class="tips">提示：分销开启和关闭的时间为晚21:00--早10:00，请提前购买二维码扫码枪以保证美味云点用户余额可以使用</div>
                                @using (Ajax.BeginForm("SaveDistributionOpen", null, new AjaxOptions()
                                {
                                    HttpMethod = "Post",
                                    OnBegin = "SubAjax.Loading",
                                    OnComplete = "SubAjax.Complate",
                                    OnFailure = "SubAjax.Failure",
                                    OnSuccess = "SubAjax.Success"
                                }, new { @class = "form-horizontal", @role = "form", @id = "commentForm" }))
                                {
                                    <div class="control-group">
                                        <label class="control-label">正式使用</label>
                                        <div class="controls">
                                            <div class="switchButton">
                                                <input id="switchB-1" type="checkbox" value="True" name="IsOpen" @(Model.IsOpen ? "checked=\"checked\"" : "")>
                                                <label for="switchB-1"></label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">状态</label>
                                        <div class="controls">
                                            <span class="text-inline">@(Model.IsSignAgreement ? "已签署合同" : "未签署合同")</span>
                                        </div>
                                    </div>
                                    <div class="form-actions">
                                        <button type="submit" class="btn blue medium">提交审核</button>
                                    </div>
                                }
                                <div class="openInfo">
                                    <div class="borderBottom oiTitle"><b class="explainIcon"></b>说明：</div>
                                    <div>
                                        <div class="oiLabel"><b class="flagIcon"></b></div>
                                        <div class="oiContent">
                                            <div class="oiTitleRed">【餐饮商家开通三级分销的意义】</div>
                                            <div class="row-fluid meanBox">
                                                <div class="span3">
                                                    <b class="meanIcon meanIcon1"></b>
                                                    <h4>增强品牌</h4>
                                                    <div class="meanText">树立餐饮品牌良好形象；增强产品信息的传递；促进商品的销售，提高销售额</div>
                                                </div>
                                                <div class="span3">
                                                    <b class="meanIcon meanIcon2"></b>
                                                    <h4>员工推广</h4>
                                                    <div class="meanText">突出的服务大大提升了员工参与企业发展，所以大大调动了员工的积极性</div>
                                                </div>
                                                <div class="span3">
                                                    <b class="meanIcon meanIcon3"></b>
                                                    <h4>拓展客户</h4>
                                                    <div class="meanText">实现层层分销佣金获得，为商家带来更多客户，提高销售额。通过美味云点的宣传，带来更多的客流量</div>
                                                </div>
                                                <div class="span3">
                                                    <b class="meanIcon meanIcon4"></b>
                                                    <h4>提高利润</h4>
                                                    <div class="meanText">客户通过APP扫码上菜，有效降低服务员数量，缩减人力成本，提高服务质量，同时增加返台率</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                        <div class="oiLabel"><b class="flagIcon"></b></div>
                                        <div class="oiContent borderBottom">
                                            <div class="oiTitleRed">【开通三级分销与优惠促销的区别】</div>
                                            <div>
                                                优惠促销的满减优惠和折扣设置只能为消费者本人带来一定的优惠，起不到扩大知名度的作用，而三级分销除消费者本人可以获得返利，他的上两级也获得了一定的返利，提高了商家的知名度，有利于快速吸引客流，增加商家利润
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                        <div class="oiLabel"></div>
                                        <div class="oiContent">
                                            <div class="oiTitleBlue">【二维码扫码枪如何购买】</div>
                                            <div>
                                                官网上有扫码枪的详细说明和价格，商家也可以到天猫或京东购买
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                        <div class="oiLabel"></div>
                                        <div class="oiContent">
                                            <div class="oiTitleBlue">【用户余额支付后资金几时到账】</div>
                                            <div>
                                                开通三级分销后，商家有义务允许用户使用账户余额的资金，结账完成后，1-2分钟美味云就把相同数额的资金达到商家账户中心，在账户明细里可以查看到
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section script{

    <!--本页js-->
    <script src="~/Content/JS/MyForm.js"></script>
}
